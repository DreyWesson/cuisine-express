  <body>
    <div class="container w-100">
      <nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
        <div class="" style="display: flex; flex-direction: column;">
          <a class="navbar-brand" href="/">Confetti Cuisine </a>
          <small
            class="label label-default"
            style="position: relative; top: -8px;"
          >
            <a href="/" style="color: #000; text-decoration: none;"
              >recipe app</a
            >
          </small>
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto text-center">
            <li class="nav-item active px-5">
              <a class="nav-link" href="/"
                >Home <span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item px-5">
              <a class="nav-link" href="/courses" title="courses">Courses</a>
            </li>
            <li class="nav-item px-5">
              <a class="nav-link" href="/subscribers" title="contact"
                >Contact</a
              >
            </li>
            <li class="nav-item px-5">
              <a class="nav-link" href="/users" title="users">Users</a>
            </li>
            <li>
              <%-include ('courses/_coursesModal') %>
            </li>
          </ul>
          <% if (loggedIn) { %>
          <div
            class="m-1 text-center"
            style="
              border-radius: 30px;
              width: 100%;
              color: #6c757d;
              padding: 10px 12px;
            "
          >
            <div class="d-flex flex-column">
              <small>Logged in as:</small>
              <a href="<%=`/users/${currentUser._id}`%>" style="color: black;">
                <%= currentUser.fullName %></a
              >
            </div>
          </div>
          <button id="logout" class="btn text-center w-100 m-1">
            <a href="/users/logout">Log Out</a>
          </button>

          <%} else {%>
          <button id="login" class="btn text-center w-100 m-1">
            <a href="/users/login">Log In</a>
          </button>
          <% } %>
        </div>
      </nav>
    </div>

    <div class="flashes">
      <% if (flashMessages) { %> <% if (flashMessages.success) { %>
      <div
        class="flash success container h4 text-right text-secondary animate__animated animate__fadeInDown"
        style="width: 75ch;"
      >
        <i class="far fa-thumbs-up mr-3 h2"></i>
        <%= flashMessages.success %>
      </div>
      <% } else if (flashMessages.error) { %>
      <div
        class="flash error container h4 text-right text-danger animate__animated animate__fadeInDown"
      >
        <%= flashMessages.error %>
      </div>
      <% } %> <% } %>
    </div>
    <div class="container d-flex _slot" style="min-height: 70vh;">
      <!-- EJS: LAYOUT & PARTIALS slot -->
      <div class="m-auto">
        <%- body %>
      </div>
    </div>
    <div class="container">
      <footer style="background: #f8f9fa; padding: 40px;">
        <div class="row">
          <div class="col-xs-12 col-lg-4">
