<div class="container" style="min-width: 40vw;">
  <div class="d-flex mb-3">
    <div style="margin-right: 20px;">
      <img
        src="https://source.unsplash.com/125x125/?avatar"
        alt="avatar"
        class="img-fluid rounded-circle"
      />
    </div>
    <div class="d-flex align-items-center">
      <div>
        <h1>
          <%= course.title %>
        </h1>
        <span>Course data for <%= course.title %></span>
      </div>
    </div>
  </div>
  <table class="table table-striped table-dark">
    <tr>
      <th class="pl-4" scope="col">Title</th>
      <td><%= course.title %></td>
    </tr>

    <tr>
      <th class="pl-4">Description</th>
      <td><%= course.description %></td>
    </tr>
    <tr>
      <th class="pl-4">Max. # of Students</th>
      <td><%= course.maxStudents %></td>
    </tr>
    <tr>
      <th class="pl-4">Cost</th>
      <td><%= course.cost %></td>
    </tr>
  </table>
  <div class="d-flex justify-content-between">
    <% if (course.subscribedAccount) { %>
    <h2 class="h5">
      This user has a
      <a href="<%=`/courses/${course.subscribedAccount}` %>">
        subscribed account</a
      >.
    </h2>
    <% } %>
    <button class="btn btn-primary">
      <a href="/courses" style="color: white;">View all courses</a>
    </button>
  </div>
  <div class="d-flex justify-content-between mt-3">
    <div>
      <a href="<%=`/courses/${course._id}/edit`%>">Edit details </a>
    </div>
    <div>
      <a
        href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"
        onclick="return confirm('Are you sure you want to delete this record?')"
        >Delete</a
      >
    </div>
  </div>
</div>
