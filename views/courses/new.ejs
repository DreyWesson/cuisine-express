<div class="card col-xs-12 col-md-12 p-3" style="min-width: 25vw;">
  <div class="card-body data-form">
    <form class="contact-form col-12" action="/courses/create" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="inputTitle"
          placeholder="Enter course title"
        />
      </div>
      <div class="form-group">
        <label for="inputDescription">Description</label>
        <input
          type="text"
          class="form-control"
          placeholder="Enter course description"
          name="description"
          id="inputDescription"
          required
        />
      </div>
      <div class="form-group">
        <label for="inputMaxStudents">Max. Students</label>
        <input
          class="form-control"
          type="number"
          name="maxStudents"
          id="inputMaxStudents"
          placeholder="Enter max number of students"
          required
        />
      </div>
      <div class="form-group">
        <label for="inputCost">Cost</label>
        <input
          class="form-control"
          type="number"
          name="cost"
          id="inputCost"
          placeholder="Enter cost"
          required
        />
      </div>
      <button type="submit" class="btn btn-secondary w-100">
        Submit
      </button>
    </form>
  </div>
</div>
