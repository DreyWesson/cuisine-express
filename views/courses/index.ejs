<div
  class="jumbotron jumbotron-fluid shadow-lg"
  style="background-color: white; border-radius: 10px; min-width: 50vw;"
>
  <div class="container-fluid">
    <div class="row">
      <div
        class="d-flex justify-content-center col-xs-12 col-md-6"
        style="height: 100%;"
      >
        <img
          src="https://source.unsplash.com/600x500/?restuarant"
          alt=""
          class="img-fluid rounded"
        />
      </div>
      <div class="col-xs-12 col-md-6">
        <h1>List of Courses</h1>
        <a href="/courses/new" class="mb-3">
          <span style="font-size: 18px;"
            ><i class="fas fa-plus mr-3"></i>Add new courses</span
          ></a
        >
        <% courses.forEach(course => { %>
        <div class="container">
          <div
            class="row"
            style="
              margin: 5px 0;
              padding: 5px 0;
              border-bottom: 3px solid #f8f9fa;
            "
          >
            <div class="col-xs-12">
              <h2 class="h5" style="margin-bottom: 0;">
                Title:
                <a href="<%= `/courses/${course._id}` %>"
                  ><%= course.title %>
                </a>
              </h2>
              <p style="margin-bottom: 0;">
                Description:
                <span style="max-height: 23px; font-size: 14px;"
                  ><%= course.description %>
                </span>
              </p>
              <span
                class="h4 col-2 badge badge-secondary py-1"
                style="max-height: 23px; font-size: 14px;"
                >$ <%= course.cost %>
              </span>
              <div class="row">
                <div class="col-xs-6">
                  <a
                    href="<%=`/courses/${course._id}/edit` %>"
                    style="
                      text-decoration: underline;
                      margin: 0 15px;
                      color: black;
                    "
                  >
                    Edit
                  </a>
                </div>
                <div class="col-xs-6" onclick="deleteUser()">
                  <a
                    href="<%=`courses/${course._id}/delete?_method=DELETE` %>"
                    style="
                      text-decoration: underline;
                      margin: 0 15px;
                      color: black;
                    "
                    onclick="return confirm('Are you sure you want to delete this record?')"
                  >
                    Delete
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</div>
