<!-- Button trigger modal -->
<button
  id="modal-btn"
  type="button"
  class="btn btn-secondary"
  data-toggle="modal"
  data-target="#subscriberModal"
  style="background-color: #f8f9fa; border: none; color: #6c757d;"
>
  Latest Subscribers
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="subscriberModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="subscriberModalCenteredTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="subscriberModalLongTitle">
          Latest Subscribers
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body subscribers-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
