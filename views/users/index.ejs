<div class="container">
  <h2 class="text-center">Users Table</h2>
  <div class="table-responsive-sm">
    <a href="/users/new" class="mb-3">
      <i class="fas fa-plus-circle mr-1 h4"></i>
      <span style="font-size: 18px; color: black;">Add new user</span>
    </a>
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Fullname</th>
          <th scope="col">Email</th>
          <th scope="col">Zip Code</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td style="font-weight: 800;">
            <a
              href="<%= `/users/${user._id}` %>"
              style="color: #f8f9fa; text-decoration: underline;"
            >
              <%= user.fullName %></a
            >
          </td>
          <td><%= user.email %></td>
          <td class>@<%= user.zipCode %></td>
          <td>
            <a
              href="<%=`/users/${user._id}/edit` %>"
              style="color: #f8f9fa; text-decoration: underline;"
            >
              Edit
            </a>
          </td>
          <td>
            <a
              href="<%= `users/${user._id}/delete?_method=DELETE` %>"
              style="color: #f8f9fa; text-decoration: underline;"
              onclick="return confirm('Are you sure you want to delete this record?')"
            >
              Delete
            </a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
