<div class="container" style="overflow-x: auto;">
  <div class="d-flex mb-3">
    <div style="margin-right: 20px;">
      <img
        src="https://source.unsplash.com/125x125/?avatar"
        alt="avatar"
        class="img-fluid rounded-circle"
      />
    </div>
    <div class="d-flex align-items-center">
      <div>
        <h1>
          <%= user.fullName %>
        </h1>
        <span class="pl-2">User data for <%= user.fullName %></span>
      </div>
    </div>
  </div>
  <table class="table table-striped table-dark" style="">
    <tr>
      <th class="pl-4" scope="col">Name</th>
      <td><%= user.fullName %></td>
    </tr>

    <tr>
      <th class="pl-4" scope="col">Email</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <th class="pl-4" scope="col">Zip Code</th>
      <td><%= user.zipCode %></td>
    </tr>
    <tr>
      <th class="pl-4" scope="col">Password</th>
      <td><%= user.password %></td>
    </tr>
  </table>
  <div class="d-flex justify-content-between">
    <% if (user.subscribedAccount) { %>
    <h2 class="h5 pt-2">
      This user has a
      <a href="<%=`/subscribers/${user.subscribedAccount}` %>">
        subscribed account</a
      >.
    </h2>
    <% } %>
    <button class="btn btn-primary">
      <a href="/users" style="color: white;">View all users</a>
    </button>
  </div>
</div>
