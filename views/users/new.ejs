<div class="card col-xs-12 col-md-12 p-3" style="min-width: 25vw;">
  <div class="card-body data-form">
    <form class="contact-form col-12" action="/users/create" method="POST">
      <div class="form-group">
        <label for="name">First Name</label>
        <input
          type="text"
          class="form-control"
          name="first"
          id="inputFirstName"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <label for="name">Last Name</label>
        <input
          type="text"
          class="form-control"
          name="last"
          id="inputLastName"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          class="form-control"
          placeholder="Enter e-mail"
          name="email"
          id="inputEmail"
        />
      </div>
      <div class="form-group">
        <label for="zipCode">Password</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="inputPassword"
          placeholder="Enter password"
        />
      </div>
      <div class="form-group">
        <label for="zipCode">Zip Code</label>
        <input
          class="form-control"
          type="text"
          name="zipCode"
          placeholder="Zip Code"
          id="inputZipCode"
          pattern="\d*"
        />
      </div>
      <button type="submit" class="btn btn-primary w-100">
        Submit
      </button>
    </form>
  </div>
</div>
