<div class="card col-xs-12 col-md-12 p-3" style="min-width: 25vw;">
  <div class="card-body data-form">
    <form class="contact-form col-12" action="/users/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control"
          placeholder="Enter your email"
          name="email"
          id="inputEmail"
          required
        />
      </div>
      <div class="form-group">
        <label for="zipCode">Password</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="inputPassword"
          placeholder="Enter your password"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary w-100">
        Submit
      </button>
    </form>
  </div>
</div>
