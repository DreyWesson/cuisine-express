<div class="d-flex justify-content-center mb-5">
  <div class="card col-xs-12 col-md-10 p-3">
    <div class="card-body data-form">
      <form class="contact-form col-12" action="/users/create" method="POST">
        <div class="form-group">
          <label for="name">First Name</label>
          <input
            type="text"
            class="form-control"
            name="first"
            id="inputFirstName"
            placeholder="Enter name"
          />
        </div>
        <div class="form-group">
          <label for="name">Last Name</label>
          <input
            type="text"
            class="form-control"
            name="last"
            id="inputLastName"
            placeholder="Enter name"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            placeholder="Enter e-mail"
            name="email"
            id="inputEmail"
            required
          />
        </div>
        <div class="form-group">
          <label for="zipCode">Password</label>
          <input
            class="form-control"
            type="password"
            name="password"
            id="inputPassword"
            placeholder="Zip Code"
            required
          />
        </div>
        <div class="form-group">
          <label for="zipCode">Zip Code</label>
          <input
            class="form-control"
            type="text"
            name="zipCode"
            placeholder="Zip Code"
            id="inputZipCode"
            pattern="\d*"
            required
          />
        </div>
        <!-- <input
            class="btn btn-warning button"
            class="form-control"
            type="submit"
            value="submit"
          /> -->
        <button type="submit" class="btn btn-warning">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
